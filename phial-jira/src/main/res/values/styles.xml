<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.EditText" parent="">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">@drawable/white_box_background</item>
        <item name="android:minHeight">@dimen/jira.item.height</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/jira.padding.horizontal.small</item>
        <item name="android:paddingRight">@dimen/jira.padding.horizontal.small</item>
    </style>

    <style name="Widget.Button" parent="">
        <item name="android:backgroundTint">@color/jira.color.primaryDark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:minHeight">@dimen/jira.button.height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>